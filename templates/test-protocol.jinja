<!DOCTYPE html>
<html lang="en">

<head>
    <title>Test Protocol</title>
    <style>
        {% include 'style.css' %}
    </style>
</head>

<body>
    {% for test in tests if not test.automated %}
    <div class="test-section">
        <h1 class="test-id">{{ test.id }}</h1>
        <p class="test-description">{{ test.description }}</p>
        <table>
            <tr>
                <th>Step</th>
                <th>Given</th>
                <th>When</th>
                <th>Then</th>
                <th>Pass</th>
                <th>Evidence</th>
            </tr>
            {% for step in test.steps %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ step.given }}</td>
                <td>{{ step.when }}</td>
                <td>{{ step.then }}</td>
                <td><input type="checkbox" name="pass-{{ test.id }}-{{ loop.index }}" /></td>
                <td>
                    {% if step.evidence %}
                        {% if step.evidence.value == "observation" %}
                        <span>Observation</span>
                        {% else %}
                        <label>{{ step.evidence.value | title }} file:</label>
                        <textarea class="evidence-box" name="evidence-{{ test.id }}-{{ loop.index }}"></textarea>
                        {% endif %}
                    {% else %}
                    <span>N/A</span>
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </table>
        <label>Comments:</label>
        <textarea class="comments-box" name="comments-{{ test.id }}"></textarea>
        {% if not loop.last %}
        <div class="page-break"></div>
        {% endif %}
    </div>
    {% endfor %}
</body>

</html>